---
import c from "../constants";

const mdResources = await Astro.glob(`../content/resources/*.md`);

const resources = mdResources.map((n) => ({
  title: n.frontmatter.title,
  Content: n.Content,
}));
---

<article class="flex flex-col gap-8">
  <span
    id={`${c.ids.resources.toLowerCase().replace(" ", "-")}`}
    class="absolute"
    style="margin-top: -3rem;"></span>

  <div class="mt-8">
    {
      resources.map(({ title, Content }) => (
        <div>
          <h2>{title}</h2>

          <article>
            <Content />
          </article>
        </div>
      ))
    }
  </div>
</article>
